public class Hexadecimal implements Comparable {

    private int _decNum;
    private String _hexNum;

    public static final String HEXADIGITS = "0123456789ABCDEF";

    //default constructor
    public Hexadecimal() {
	_decNum = 0;
	_hexNum = "0";
    }

    //overloaded constructor
    public Hexadecimal( int n ) {
	_decNum = n;
	_hexNum = decToHex(n);
    }

    public String toString() {
	return _hexNum;
    }
    
    public static String decToHex( int n ) {
	String retStr = "";
	while (n > 0) {
	    retStr = HEXADIGITS.substring(n%16, n%16 + 1) + retStr;
	    n = n / 16;
	}
	return retStr;
    }

    public static void main( String[] args ) {

	System.out.println();
	System.out.println( "Testing ..." );

	Hexadecimal  h1 = new Hexadecimal(5);
	Hexadecimal h2 = new Hexadecimal(5);
	Hexadecimal h3 = h1;
	Hexadecimal h4 = new Hexadecimal(10);
	Hexadecimal h5 = new Hexadecimal(18);
	Hexadecimal h6 = new Hexadecimal(27);

	System.out.println( h1 );
	System.out.println( h2 );
	System.out.println( h3 );
	System.out.println( h4 );
	System.out.println( h5 );
	System.out.println( h6 );

    }

}